#!/bin/bash

UPLOAD_PATH="/home/pi/tgr/console/public/upload"


if [ "$1" == "-ls" ]; then

    if [ "$2" == "-fp" ]; then
        /usr/bin/find $UPLOAD_PATH -name "*.jpg" -o -name "*.png" -print
    else
        /usr/bin/find $UPLOAD_PATH -name "*.jpg" -o -name "*.png" -exec /usr/bin/basename {} \;
    fi

elif [ "$1" == "-rm" ]; then

    NUM=`/usr/bin/find $UPLOAD_PATH -name "*.jpg" -o -name "*.png" -exec rm -f {} \; -print | wc -l`

    echo $NUM
fi

