#!/bin/bash

NEW_SSID=$1
NEW_PSK=$2

FILE="/etc/wpa_supplicant/wpa_supplicant.conf"

OLD_SSID=`grep ssid $FILE | awk -F "=" '{ print $2 }' | awk -F '"' '{ print $2 }'`
OLD_PSK=`grep psk $FILE | awk -F "=" '{ print $2 }' | awk -F '"' '{ print $2 }'`

sudo sed -i "s/ssid=\"$OLD_SSID\"/ssid=\"$NEW_SSID\"/" $FILE
sudo sed -i "s/psk=\"$OLD_PSK\"/psk=\"$NEW_PSK\"/" $FILE
